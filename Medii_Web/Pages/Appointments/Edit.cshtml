@page
@model ProiectMedii.Pages.Appointments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Programare</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.ID" />
            <div class="form-group">
                <label asp-for="Appointment.Date" class="control-label"></label>
                <input asp-for="Appointment.Date" class="form-control" />
                <span asp-validation-for="Appointment.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.StartTime" class="control-label"></label>
                <input asp-for="Appointment.StartTime" class="form-control" />
                <span asp-validation-for="Appointment.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.EndTime" class="control-label"></label>
                <input asp-for="Appointment.EndTime" class="form-control" />
                <span asp-validation-for="Appointment.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.ClientID" class="control-label">Numele clientului</label>
                <select asp-for="Appointment.ClientID" class="form-control" asp-items="ViewBag.ClientID"></select>
                <span asp-validation-for="Appointment.ClientID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.EmployeeID" class="control-label">Numele angajatului</label>
                <select asp-for="Appointment.EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
                <span asp-validation-for="Appointment.EmployeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.ServiceID" class="control-label">Numele serviciului</label>
                <select asp-for="Appointment.ServiceID" class="form-control" asp-items="ViewBag.ServiceID"></select>
                <span asp-validation-for="Appointment.ServiceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

